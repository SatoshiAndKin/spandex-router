{
  "name": "flashprofits-spandex-router",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "tsx --watch src/server.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dead-code": "knip",
    "duplicates": "jscpd src/",
    "docs": "typedoc --entryPoints src/server.ts src/config.ts src/quote.ts src/curve.ts src/metrics.ts src/tracing.ts src/feature-flags.ts --out docs/api",
    "prepare": "husky"
  },
  "dependencies": {
    "@curvefi/api": "^2.68.37",
    "@sentry/node": "^10.40.0",
    "@spandex/core": "^0.4.3",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "viem": "^2.40.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jscpd": "^4.0.8",
    "knip": "^5.85.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
